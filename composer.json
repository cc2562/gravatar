{
    "name": "cc2562/gravatar",
    "description": "Add gravatar avatars to your forum for CN user",
    "keywords": [
        "flarum",
        "gravatar"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/cc2562/gravatar/",
        "source": "https://github.com/cc2562/gravatar/"
    },
    "require": {
        "flarum/core": "^1.2.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "authors": [
        {
            "name": "IanM",
            "email": "ian@blomstra.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "IanM\\Gravatar\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Gravatar",
            "category": "feature",
            "icon": {
                "image": "resources/logo.svg",
                "backgroundColor": "#0072e3",
                "backgroundSize": "80%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/27930"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "require-dev": {
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
